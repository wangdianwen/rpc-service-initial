{
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true,
    "documentLink": true,
    "go to typeDefinition": true,
    "inlayHints": true,
    "semanticTokens": true
  },
  "go.formatTool": "gofumpt",
  "go.defaultFormatter": "mvdan.go",
  "[go]": {
    "editor.defaultFormatter": "mvdan.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "file",
  "go.lintFlags": [
    "--fast",
    "--issues-exit-code=1",
    "--output-format=colored-line-number",
    "--timeout=5m"
  ],
  "go.testFlags": [
    "-v",
    "-race",
    "-cover",
    "-count=1"
  ],
  "go.coverageOptions": "modeAtomic",
  "go.testTimeout": "300s",
  "go.buildTags": "ddd",
  "go.vetOnSave": "package",
  "go.diagnosticFlags": {
    "vulncheck": "Imports"
  },
  "go.completion.snippetSupport": true,
  "go.completion.enableWorkspaceSymbols": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.renderLineHighlight": "all",
  "editor.bracketPairColorization.enabled": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.associations": {
    "*.proto": "protobuf",
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },
  "search.exclude": {
    "**/bin": true,
    "**/vendor": true,
    "**/*_test.go": true,
    "**/mocks": true,
    "**/*.pb.go": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/bin/**": true,
    "**/vendor/**": true
  },
  "[proto3]": {
    "editor.defaultFormatter": "zxh404.vscode-proto3"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
